<%- include('../includes/head.ejs') %>
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>
      <main>
        <% if (orders.length <=0) {%>
          <h1>Nothing there!</h1>
          <% } else { %>
            <ul>
              <% orders.forEach(order=> { %>
                <li>
                  <h1>
                    Order id: <%= order.id %>
                  </h1>
                  <h3>Order products:</h3>
                  <ul>
                    <% order.products.forEach(prod=> { %>
                      <li>
                        <%= prod.order_product.quantity %>x <%= prod.title %>
                      </li>
                      <% }) %>
                  </ul>
                </li>
                <% }) %>
            </ul>
            <% } %>
      </main>
      <%- include('../includes/end.ejs') %>